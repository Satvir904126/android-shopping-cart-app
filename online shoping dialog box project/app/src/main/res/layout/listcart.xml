<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/prodImage"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="10dp"

        ></ImageView>

    <TextView
        android:id="@+id/ProdName1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/prodImage"
        android:text="Name"
        android:textSize="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="10dp"
        ></TextView>
    <TextView
        android:id="@+id/ProdQuantity1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/ProdName1"
        app:layout_constraintLeft_toRightOf="@+id/prodImage"
        android:text="1"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        ></TextView>
    <TextView
        android:id="@+id/start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/ProdName1"
        app:layout_constraintLeft_toRightOf="@+id/ProdQuantity1"
        android:text="*"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        ></TextView>
    <TextView
        android:id="@+id/ProdPrice1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/ProdName1"
        app:layout_constraintLeft_toRightOf="@+id/start"
        android:text="3.99"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        ></TextView>

    <TextView
        android:id="@+id/equal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/ProdName1"
        app:layout_constraintLeft_toRightOf="@+id/ProdPrice1"
        android:text="="
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        ></TextView>

    <TextView
        android:id="@+id/TotalPrice1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/ProdName1"
        app:layout_constraintRight_toRightOf="parent"
        android:text="100"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        ></TextView>




</androidx.constraintlayout.widget.ConstraintLayout>
